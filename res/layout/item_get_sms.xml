<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/length_40"
        android:gravity="center"
        android:text="date"
        android:textSize="@dimen/length_18"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_type"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/length_40"
            android:layout_weight="1"
            android:gravity="left|center"
            android:paddingLeft="@dimen/length_5"
            android:text="type"
            android:textSize="@dimen/length_18"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_person"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/length_40"
            android:layout_weight="1"
            android:gravity="left|center"
            android:text="person"
            android:textColor="@color/red"
            android:textSize="@dimen/length_18"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_address"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/length_40"
            android:layout_weight="1"
            android:gravity="right|center"
            android:paddingRight="@dimen/length_5"
            android:text="address"
            android:textColor="@color/red"
            android:textSize="@dimen/length_18"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_body"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="left|center"
        android:maxLines="2"
        android:paddingBottom="@dimen/length_5"
        android:paddingLeft="@dimen/length_5"
        android:paddingTop="@dimen/length_5"
        android:text="body"
        android:textSize="@dimen/length_18"
        android:visibility="gone" />

</LinearLayout>