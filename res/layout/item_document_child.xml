<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/length_2"
    android:background="@drawable/white_button_selector_stroke_1px"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:paddingBottom="@dimen/length_10"
        android:paddingLeft="@dimen/length_20"
        android:paddingTop="@dimen/length_10"
        android:text="Name"
        android:textSize="@dimen/length_16" />

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:paddingBottom="@dimen/length_10"
        android:paddingLeft="@dimen/length_20"
        android:paddingTop="@dimen/length_10"
        android:text="Description"
        android:textSize="@dimen/length_16" />

</LinearLayout>