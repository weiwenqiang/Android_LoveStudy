<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutBaseTheme" >

    <include
        android:id="@+id/title"
        layout="@layout/layout_title" />

    <TextView
        android:id="@+id/txt_spinner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_40"
        android:layout_margin="@dimen/length_1"
        android:background="@drawable/white_button_selector_stroke_1px"
        android:gravity="center|left"
        android:paddingLeft="@dimen/length_3"
        android:text="@string/your_love" />

    <Spinner
        android:id="@+id/Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>