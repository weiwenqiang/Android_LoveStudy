<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutBaseTheme" >

    <include
        android:id="@+id/title"
        layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/length_1"
        android:background="@drawable/white_button_selector_stroke_2px"
        android:orientation="horizontal"
        android:padding="1px" >

        <TextView
            android:id="@+id/week_Monday"
            android:layout_width="match_parent"
            android:layout_height="@dimen/length_30"
            android:layout_weight="1"
            android:background="@drawable/white_button_selector_stroke_1px"
            android:gravity="center"
            android:padding="@dimen/length_3"
            android:text="星期一"
            android:textSize="@dimen/length_12" />

        <TextView
            android:id="@+id/week_Tuesday"
            android:layout_width="match_parent"
            android:layout_height="@dimen/length_30"
            android:layout_weight="1"
            android:background="@drawable/white_button_selector_stroke_1px"
            android:gravity="center"
            android:padding="@dimen/length_3"
            android:text="星期二"
            android:textSize="@dimen/length_12" />

        <TextView
            android:id="@+id/week_Wednesday"
            android:layout_width="match_parent"
            android:layout_height="@dimen/length_30"
            android:layout_weight="1"
            android:background="@drawable/white_button_selector_stroke_1px"
            android:gravity="center"
            android:padding="@dimen/length_3"
            android:text="星期三"
            android:textSize="@dimen/length_12" />

        <TextView
            android:id="@+id/week_Thursday"
            android:layout_width="match_parent"
            android:layout_height="@dimen/length_30"
            android:layout_weight="1"
            android:background="@drawable/white_button_selector_stroke_1px"
            android:gravity="center"
            android:padding="@dimen/length_3"
            android:text="星期四"
            android:textSize="@dimen/length_12" />

        <TextView
            android:id="@+id/week_Friday"
            android:layout_width="match_parent"
            android:layout_height="@dimen/length_30"
            android:layout_weight="1"
            android:background="@drawable/white_button_selector_stroke_1px"
            android:gravity="center"
            android:padding="@dimen/length_3"
            android:text="星期五"
            android:textSize="@dimen/length_12" />

        <TextView
            android:id="@+id/week_Saturday"
            android:layout_width="match_parent"
            android:layout_height="@dimen/length_30"
            android:layout_weight="1"
            android:background="@drawable/white_button_selector_stroke_1px"
            android:gravity="center"
            android:padding="@dimen/length_3"
            android:text="星期六"
            android:textSize="@dimen/length_12" />

        <TextView
            android:id="@+id/week_Sunday"
            android:layout_width="match_parent"
            android:layout_height="@dimen/length_30"
            android:layout_weight="1"
            android:background="@drawable/white_button_selector_stroke_1px"
            android:gravity="center"
            android:padding="@dimen/length_3"
            android:text="星期日"
            android:textSize="@dimen/length_12" />
    </LinearLayout>

</LinearLayout>