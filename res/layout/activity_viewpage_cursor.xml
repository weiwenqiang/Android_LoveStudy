<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutBaseTheme" >

    <include
        android:id="@+id/title"
        layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tap_one"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="tab_one"
            android:textSize="14sp" >
        </TextView>

        <TextView
            android:id="@+id/tap_two"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="tab_two"
            android:textSize="14sp" >
        </TextView>

        <TextView
            android:id="@+id/tab_three"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="tap_three"
            android:textSize="14sp" >
        </TextView>
    </LinearLayout>

    <com.example.lovestudy.view.ViewPageCursorView
        android:id="@+id/viewpage_cursor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="#cb0b3e" />

    <com.example.lovestudy.base.BaseViewPager
        android:id="@+id/viewpage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </com.example.lovestudy.base.BaseViewPager>

</LinearLayout>