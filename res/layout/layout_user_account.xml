<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/length_50"
    android:layout_marginLeft="@dimen/length_10"
    android:layout_marginRight="@dimen/length_10"
    android:layout_marginTop="@dimen/length_40"
    android:background="@drawable/edit_login_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/length_13"
        android:layout_marginRight="@dimen/length_13"
        android:src="@drawable/icon_account" />

    <EditText
        android:id="@+id/edit_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:hint="@string/username_edit_hint"
        android:singleLine="true"
        android:textSize="@dimen/length_16" />

    <ImageView
        android:id="@+id/icon_cancel"
        android:layout_width="@dimen/length_30"
        android:layout_height="@dimen/length_30"
        android:layout_marginRight="@dimen/length_8"
        android:scaleType="center"
        android:src="@drawable/icon_cancel"
        android:visibility="gone" />

</LinearLayout>