<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutBaseTheme" >

    <include
        android:id="@+id/title"
        layout="@layout/layout_title" />

    <TextView
        android:id="@+id/txtOpen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_50"
        android:layout_marginLeft="@dimen/length_10"
        android:layout_marginRight="@dimen/length_10"
        android:layout_marginTop="@dimen/length_30"
        android:background="@drawable/red_btn_selector"
        android:gravity="center"
        android:padding="@dimen/length_5"
        android:text="@string/open"
        android:textColor="@color/white" />

</LinearLayout>