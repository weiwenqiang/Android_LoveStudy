<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#a6a6a6" >

    <com.example.lovestudy.base.BaseImageView
        android:id="@+id/img_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_160"
        android:background="#e8e8e8"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/length_10" >

            <com.example.lovestudy.base.BaseImageView
                android:id="@+id/img_head"
                android:layout_width="@dimen/length_60"
                android:layout_height="@dimen/length_60"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp" >

            <TextView
                android:id="@+id/txt_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/length_10"
                android:padding="@dimen/length_5"
                android:text="个人资料"
                android:textColor="@drawable/txt_selector_userhead"
                android:textSize="@dimen/length_16" />

            <TextView
                android:id="@+id/txt_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/length_5"
                android:text="昵称"
                android:textColor="@drawable/txt_selector_userhead"
                android:textSize="@dimen/length_16" />

            <TextView
                android:id="@+id/txt_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/length_10"
                android:background="@drawable/red_btn_selector"
                android:paddingBottom="@dimen/length_5"
                android:paddingLeft="@dimen/length_15"
                android:paddingRight="@dimen/length_15"
                android:paddingTop="@dimen/length_5"
                android:text="登录"
                android:textColor="@drawable/txt_selector_login_btn" />
        </RelativeLayout>

        <!-- 待付款、待发货、待收货 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/length_50"
            android:background="#99000000"
            android:gravity="center|left"
            android:orientation="horizontal" >

            <!-- left -->

            <LinearLayout
                android:id="@+id/module_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/module_left_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="left"
                    android:textColor="@drawable/txt_selector_userhead" />

                <View
                    android:layout_width="@dimen/length_1"
                    android:layout_height="@dimen/length_30"
                    android:layout_gravity="center"
                    android:background="@color/white" />
            </LinearLayout>

            <!-- center -->

            <LinearLayout
                android:id="@+id/module_center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/module_center_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="center"
                    android:textColor="@drawable/txt_selector_userhead" />

                <View
                    android:layout_width="@dimen/length_1"
                    android:layout_height="@dimen/length_30"
                    android:layout_gravity="center"
                    android:background="@color/white" />
            </LinearLayout>

            <!-- right -->

            <LinearLayout
                android:id="@+id/module_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/module_right_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="right"
                    android:textColor="@drawable/txt_selector_userhead" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>