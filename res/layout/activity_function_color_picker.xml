<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutBaseTheme"
    android:gravity="center_horizontal" >

    <include
        android:id="@+id/title"
        layout="@layout/layout_title" />

    <TextView
        android:id="@+id/txtChooseColor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_50"
        android:layout_marginLeft="@dimen/length_10"
        android:layout_marginRight="@dimen/length_10"
        android:layout_marginTop="@dimen/length_20"
        android:background="@drawable/red_btn_selector"
        android:gravity="center"
        android:padding="@dimen/length_5"
        android:text="@string/choose_color"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/length_50"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/length_5"
            android:text="@string/preview" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/white_button_selector_stroke_1px"
            android:orientation="vertical"
            android:padding="@dimen/length_1" >

            <View
                android:id="@+id/preView"
                android:layout_width="200dp"
                android:layout_height="200dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>