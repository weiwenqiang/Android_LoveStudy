<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutBaseTheme" >

    <include
        android:id="@+id/title"
        layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/divider"
        android:orientation="vertical" >

        <com.example.lovestudy.base.BaseImageView
            android:id="@+id/package_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/length_9"
            android:layout_marginTop="@dimen/length_54" />

        <TextView
            android:id="@+id/version_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/length_50"
            android:gravity="center"
            android:text="爱学习  6.0.0"
            android:textColor="#333333"
            android:textSize="@dimen/length_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/C5C5C5" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 引导 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/guide"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/length_50"
                    android:background="@drawable/item_selector_pressed_false_f0f0f0_true_ffffff"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/length_30"
                    android:text="@string/guide" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/C5C5C5" />
            </LinearLayout>

            <!-- 包大小 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/package_size"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/length_50"
                    android:background="@drawable/item_selector_pressed_false_f0f0f0_true_ffffff"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/length_30"
                    android:text="@string/apk_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/C5C5C5" />
            </LinearLayout>

            <!-- 应用是否安裝 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/app_has_install"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/length_50"
                    android:background="@drawable/item_selector_pressed_false_f0f0f0_true_ffffff"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/length_30"
                    android:text="@string/app_has_install" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/C5C5C5" />
            </LinearLayout>

            <!-- 应用签名 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/app_sign"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/length_50"
                    android:background="@drawable/item_selector_pressed_false_f0f0f0_true_ffffff"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/length_30"
                    android:text="@string/app_sign" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/C5C5C5" />
            </LinearLayout>

            <!-- 应用签名(MD5) -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/app_sign_md5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/length_50"
                    android:background="@drawable/item_selector_pressed_false_f0f0f0_true_ffffff"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/length_30"
                    android:text="应用签名(MD5)" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/C5C5C5" />
            </LinearLayout>

            <!-- 应用签名(SHA1) -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/app_sign_sha1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/length_50"
                    android:background="@drawable/item_selector_pressed_false_f0f0f0_true_ffffff"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/length_30"
                    android:text="应用签名(SHA1)" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/C5C5C5" />
            </LinearLayout>

            <!-- 应用签名(SigAlgName) -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/app_sign_SigAlgName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/length_50"
                    android:background="@drawable/item_selector_pressed_false_f0f0f0_true_ffffff"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/length_30"
                    android:text="应用签名(SigAlgName)" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/C5C5C5" />
            </LinearLayout>

            <!-- 应用签名(SubjectDN) -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/app_sign_SubjectDN"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/length_50"
                    android:background="@drawable/item_selector_pressed_false_f0f0f0_true_ffffff"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/length_30"
                    android:text="应用签名(SubjectDN)" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/C5C5C5" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>