<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutBaseTheme" >

    <include
        android:id="@+id/title"
        layout="@layout/layout_title" />

    <Button
        android:id="@+id/btn_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_45"
        android:layout_margin="@dimen/length_5"
        android:background="@drawable/red_btn_selector"
        android:gravity="center"
        android:text="方式一：普通方式插入10000条数据到数据库"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txt_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_100"
        android:layout_marginLeft="@dimen/length_5"
        android:layout_marginRight="@dimen/length_5"
        android:background="@drawable/white_button_selector_stroke_1px"
        android:gravity="center" />

    <Button
        android:id="@+id/btn_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_45"
        android:layout_margin="@dimen/length_5"
        android:background="@drawable/red_btn_selector"
        android:gravity="center"
        android:text="方式二：开启事务插入10000条数据到数据库"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txt_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_100"
        android:layout_marginLeft="@dimen/length_5"
        android:layout_marginRight="@dimen/length_5"
        android:background="@drawable/white_button_selector_stroke_1px"
        android:gravity="center" />

</LinearLayout>