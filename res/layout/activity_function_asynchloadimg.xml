<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutBaseTheme" >

    <include
        android:id="@+id/title"
        layout="@layout/layout_title" />

    <Button
        android:id="@+id/asynchload_handle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_45"
        android:layout_marginLeft="@dimen/length_5"
        android:layout_marginRight="@dimen/length_5"
        android:layout_marginTop="@dimen/length_5"
        android:background="@drawable/red_btn_selector"
        android:gravity="center"
        android:text="Handler"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/asynchload_asynchtask"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_45"
        android:layout_marginLeft="@dimen/length_5"
        android:layout_marginRight="@dimen/length_5"
        android:layout_marginTop="@dimen/length_5"
        android:background="@drawable/red_btn_selector"
        android:gravity="center"
        android:text="AsynchTask（异步任务）"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/asynchload_executorservice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_45"
        android:layout_marginLeft="@dimen/length_5"
        android:layout_marginRight="@dimen/length_5"
        android:layout_marginTop="@dimen/length_5"
        android:background="@drawable/red_btn_selector"
        android:gravity="center"
        android:text="ExecutorService（线程池）"
        android:textColor="@color/white" />

</LinearLayout>