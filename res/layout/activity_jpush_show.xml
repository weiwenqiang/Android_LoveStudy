<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutBaseTheme" >

    <include
        android:id="@+id/title"
        layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/length_3"
            android:background="@drawable/white_button_selector_stroke_1px"
            android:orientation="vertical"
            android:padding="@dimen/length_3" >

            <TextView
                android:id="@+id/txt_jpush_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:textColor="@color/red"
                android:textSize="@dimen/length_20" />

            <TextView
                android:id="@+id/txt_jpush_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:textSize="@dimen/length_17" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>