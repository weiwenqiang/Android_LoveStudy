<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutBaseTheme" >
    
    <include
        android:id="@+id/title"
        layout="@layout/layout_title" />

    <LinearLayout
        android:id="@+id/layout_zoom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/item_selector_pressed_false_f0f0f0_true_ffffff"
        android:gravity="center|left"
        android:orientation="horizontal" >

        <com.example.lovestudy.base.BaseImageView
            android:id="@+id/img_zoom"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/empty_photo" />

        <TextView
            android:id="@+id/txt_zoom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/set_head_portrait"
            android:textColor="#8f8f8f"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>