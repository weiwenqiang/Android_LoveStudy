<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutBaseTheme" >

    <include
        android:id="@+id/title"
        layout="@layout/layout_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_100"
        android:layout_marginLeft="@dimen/length_10"
        android:layout_marginRight="@dimen/length_10"
        android:layout_marginTop="@dimen/length_20"
        android:background="@drawable/white_button_selector_stroke_1px"
        android:padding="@dimen/length_5"
        android:text="提示：\n当前的界面是新进程中的界面，与本应用中的其他界面是不处于同一进程的。"
        android:textColor="@color/blue" />

    <TextView
        android:id="@+id/txt_kill_process"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_45"
        android:layout_marginLeft="@dimen/length_10"
        android:layout_marginRight="@dimen/length_10"
        android:layout_marginTop="@dimen/length_10"
        android:background="@drawable/red_btn_selector"
        android:gravity="center"
        android:text="杀掉新启动的进程"
        android:textColor="@color/white" />

</LinearLayout>